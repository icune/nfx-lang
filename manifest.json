{
  "manifest_version": 3,
  "name": "NetflixSub",
  "description": "Netflix subtitles extension",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "netflix.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "background",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}